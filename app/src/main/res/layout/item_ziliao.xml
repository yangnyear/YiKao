<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/ll_item_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_item_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_abc_image_english"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:textColor="#000000"
                android:id="@+id/tt_item_name_goodsname"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="【四级真题】2016年春季大学英语四级真题"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tt_item_goods_worth"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="1积分"
                android:textColor="#ff0707"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tt_item_goods_information"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textColor="#a1a1a1"
                android:text="16666天评论,1444人下载"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>